SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True

DB_NAME=inboxpilot
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Gmail OAuth Credentials
# Get these from: https://console.cloud.google.com/
# 1. Create a new project
# 2. Enable Gmail API
# 3. Create OAuth 2.0 credentials (Web application)
# 4. Add authorized redirect URI: http://localhost:5173/oauth/gmail/callback
GMAIL_CLIENT_ID=your-gmail-client-id.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=your-gmail-client-secret

# Outlook/Microsoft OAuth Credentials
# Get these from: https://portal.azure.com/
# 1. Go to Azure Active Directory > App registrations
# 2. Register new application
# 3. Add redirect URI: http://localhost:5173/oauth/outlook/callback
# 4. Add API permissions: Mail.Read, Mail.Send, Mail.ReadWrite, offline_access
OUTLOOK_CLIENT_ID=your-outlook-client-id
OUTLOOK_CLIENT_SECRET=your-outlook-client-secret

# Google Gemini AI API Key
# Get your API key from: https://makersuite.google.com/app/apikey
# This enables AI features: email priority detection, smart summarization, and reply generation
GEMINI_API_KEY=your-gemini-api-key-here
